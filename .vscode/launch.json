{
  "version": "1.0.0",
  "configurations": [
    {
      "name": "pwdebug-constant-spec-file",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/.bin/playwright",
      "args": [
        "test",
        "tests/trade/order-details.spec.ts"
        // "tests/ui/analyze.spec.ts"
        // "--timeout=60000"
        // "--retries=1",
      ],
      "stopOnEntry": true,
      // "console": "integratedTerminal",
      "runtimeArgs": ["--nolazy"]
    },
    {
      "name": "pwdebug",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/.bin/playwright",
      "args": [
        "test",
        "${file}",
        "--timeout=60000"
        // "--retries=1",
      ],
      "stopOnEntry": true,
      // "console": "integratedTerminal",
      "runtimeArgs": ["--nolazy"]
    }
  ]
}
